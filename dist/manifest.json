{
    "manifest_version": 2,
    "name": "Check VPN Status",
    "description": "An extension to enforce the privacy",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "red16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "js/eventPage.js",
            "hot-reload.js"
        ],
        "persistent": true
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "background",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "management",
        "*://*/*"
    ]
}